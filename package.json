{
  "name": "pentest-ai-suite",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "python -m venv .venv && . .venv/bin/activate && pip install -r backend/requirements.txt && cd desktop && npm install",
    "backend": "python -m uvicorn backend.app.main:app --host 127.0.0.1 --port 8000",
    "frontend": "cd desktop && npm run dev:desktop",
    "run-all": "concurrently \"npm run backend\" \"npm run frontend\"",
    "build-installer": "cd desktop && npm run dist:win"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
